<h2>Adoptions</h2>
<div class="new">
<p class="btn--wrapper">
  <a class="btn btn--action" href="/adoptions/new">New Adoption!</a>
</p>

<% for adoption in @adoptions  %>
<p>Owner: <%= adoption.owner%></p>
<p>Animal: <%= adoption.animal  %></p>
<p>Adoption Date: <%= adoption.adoption_date%></p>
<form  action="/adoptions/<%=adoption.id  %>/delete" method="post">
  <input type="submit"  value="Delete">
</form>
<% end  %>
</div>
