<h1>New Adoption</h1>

<form action="/adoptions" method="post">
  <label>
    Select a Owner:
    <select name="owner_id">
      <% for owner in @owners %>
      <option value="<%= owner.id %>"><%= owner.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select a Animal:
    <select name="animal_id">
      <% for animal in @animals %>
      <option value="<%= animal.id %>"><%= animal.name %></option>
      <% end %>
    </select>
  </label>

  Adoption Date:
  <input type="date" name="adoption_date" id="adoption_date">
</label>

<input class="btn btn--action" type='submit' value="adopt!">
</form>
